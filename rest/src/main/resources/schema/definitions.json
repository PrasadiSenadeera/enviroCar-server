{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "username": {
    "pattern": "^[_A-Za-z0-9-]{4,}$",
    "type": "string"
  },
  "date-time": {
    "format": "date-time",
    "type": "string"
  },
  "mail": {
    "pattern": "^[_A-Za-z0-9-+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$",
    "type": "string"
  },
  "track-ref": {
    "type": "object",
    "required": [
      "id"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "modified": {
        "type": "string",
        "format": "date-time"
      },
      "name": {
        "type": "string"
      }
    }
  }
}
