{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://envirocar.org/api/stable/schema/measurements.json#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "https://envirocar.org/api/stable/schema/measurement.json#"
      }
    }
  }
}
